{% macro quickFilters(title, heading, tags, activeTag) %}
<nav class="quick-filters" data-component="quick-filters">

  <ul class="quick-filters__list" role="list" data-quick-filters-list>
    {% if heading %}
      <span class="quick-filters__list-heading">{{ heading }}</span>
    {% endif %}

    <li class="quick-filters__list-item">
      <a
        href="#"
        class="quick-filters__button{% if not activeTag %} quick-filters__button--active{% endif %}"
        data-quick-filter
        data-filter-value=""
        aria-current="{{ not activeTag ? 'true' : 'false' }}"
      >
        <span>All</span>
      </a>
    </li>

    {% for tag in tags %}
      {% set label = tag.label or tag %}
      {% set value = tag.value or tag %}
      <li class="quick-filters__list-item">
        <a
          href="#"
          class="quick-filters__button{% if activeTag and activeTag == value %} quick-filters__button--active{% endif %}"
          data-quick-filter
          data-filter-value="{{ value }}"
          aria-current="{{ activeTag and activeTag == value ? 'true' : 'false' }}"
        >
          <span>{{ label }}</span>
        </a>
      </li>
    {% endfor %}
  </ul>
</nav>
{% endmacro %}
