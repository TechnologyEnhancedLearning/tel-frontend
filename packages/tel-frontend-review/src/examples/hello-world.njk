{% set title = "Hello World example" %}
{% extends "layouts/page.njk" %}

{% from "packages/components/hero/macro.njk" import hero %}

{% block header %}
  {% call hero({
    heading: "This is an internal development app to preview the tel-frontend components.",
    headingClasses: "nhsuk-body-l nhsuk-u-font-weight-normal",
    headingLevel: 2
  }) %}
  {% endcall %}
{% endblock %}

{% block content %}
  <h2 class="nhsuk-heading-m">Hello World</h2>
  <p class="nhsuk-body">This is a placeholder example page to test the TEL Frontend review app.</p>
  <div class="nhsuk-card">
    <div class="nhsuk-card__content">
      <h3 class="nhsuk-card__heading">Hello World Card Heading</h3>
      <p class="nhsuk-card__description">Once deployment is working, replace this with your real components.</p>
    </div>
  </div>
{% endblock %}
